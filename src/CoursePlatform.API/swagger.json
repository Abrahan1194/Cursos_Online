        "tags": [
          "Courses"
        ],
        "summary": "Searches for courses with pagination and filtering",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query for title",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status (Draft/Published)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number (default 1)",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "Page size (default 10)",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns list of courses"
          }
        }
      }
    },
